<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
    <%- include('partials/_meta') %>
  </head>

  <body>
    <%- include('partials/_header') %>
    <div class="d-flex flex-column gap-2 p-2">

      <!-- Searchbar  -->
      <div class="searchbar w-100 d-flex align-items-center gap-3 pb-2">
        <form class="form-floating w-100">
          <div class="input-group">
            <span class="input-group-text" id="basic-addon1">
              <i
                role="button"
                data-bs-content="Top popover"
                class="fa-solid fa-search"
              ></i
            ></span>
            <input
              type="text"
              class="form-control"
              placeholder="Search for items"
            />
          </div>
        </form>
        <div class="btn-group">
          <button
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#filter-form"
            aria-controls="filter-form"
            aria-expanded="false"
            aria-label="Toggle filter form"
            class="btn btn-primary dropdown-toggle"
          >
            <i role="button" class="fa-solid fa-filter"></i>
          </button>
        </div>
      </div>

      <!-- Filter form, opens on filter btn press -->
      <ul class="collapse p-0" id="filter-form">
        <div class="d-flex gap-2">
          <div class="col">
            <input type="text" class="form-control input-dark" placeholder="Min price" />
          </div>
          <div class="col">
            <input type="text" class="form-control" placeholder="Max price" />
          </div>
        </div>
      </ul>

      <!-- Render product cards -->
      <main>
        <div class="container">

          <div class="row">
            <div class="col-3">
              <div class="card">
                <img scr="/images/productsample.jpg" class=""card-img-top">
                <div class="card-body">
                  <h5 class="card-title">Rare cards</h5>
                </div>
              </div>
            </div>
            <div class="col-3">
              <div class="card">
                <img scr="/images/productsample.jpg" class=""card-img-top">
                <div class="card-body">
                  <h5 class="card-title">Rare cards</h5>
                </div>
              </div>
            </div>
            <div class="col-3">
              <div class="card">
                <img scr="/images/productsample.jpg" class=""card-img-top">
                <div class="card-body">
                  <h5 class="card-title">Rare cards</h5>
                </div>
              </div>
            </div>
            <div class="col-3">
              <div class="card">
                <img scr="/images/productsample.jpg" class=""card-img-top">
                <div class="card-body">
                  <h5 class="card-title">Rare cards</h5>
                </div>
              </div>
            </div>          
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
